<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditPerfilActivity">

    <EditText
        android:id="@+id/edit_text_edp_nome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="Nome"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_edp_foto" />

    <EditText
        android:id="@+id/edit_text_edp_cpf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number"
        android:minHeight="48dp"
        android:hint="CPF"
        app:layout_constraintEnd_toEndOf="@+id/edit_text_edp_nome"
        app:layout_constraintStart_toStartOf="@+id/edit_text_edp_nome"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_edp_nome" />

    <EditText
        android:id="@+id/edit_text_edp_telefone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number"
        android:minHeight="48dp"
        android:hint="Telefone"
        app:layout_constraintEnd_toEndOf="@+id/edit_text_edp_cpf"
        app:layout_constraintStart_toStartOf="@+id/edit_text_edp_cpf"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_edp_cpf" />

    <EditText
        android:id="@+id/edit_text_edp_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:hint="Email"
        app:layout_constraintEnd_toEndOf="@+id/edit_text_edp_telefone"
        app:layout_constraintStart_toStartOf="@+id/edit_text_edp_telefone"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_edp_telefone" />

    <EditText
        android:id="@+id/edit_text_edp_senha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="text"
        android:minHeight="48dp"
        android:hint="Senha"
        app:layout_constraintEnd_toEndOf="@+id/edit_text_edp_email"
        app:layout_constraintStart_toStartOf="@+id/edit_text_edp_email"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_edp_email" />

    <Button
        android:id="@+id/btn_edp_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/btn_edp_create"
        app:layout_constraintEnd_toEndOf="@+id/edit_text_edp_senha"
        app:layout_constraintStart_toStartOf="@+id/edit_text_edp_senha"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_edp_senha" />

    <Button
        android:id="@+id/btn_edp_foto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_rounded"
        android:textStyle="bold"
        android:text="Foto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_view_edp_foto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_edp_foto"
        app:layout_constraintEnd_toEndOf="@+id/btn_edp_foto"
        app:layout_constraintStart_toStartOf="@+id/btn_edp_foto"
        app:layout_constraintTop_toTopOf="@+id/btn_edp_foto"
        />

</androidx.constraintlayout.widget.ConstraintLayout>